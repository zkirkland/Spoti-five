<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color:#808080;">
	<div class="container">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="jumbotron box-shadow--8dp clearfix" style="padding: 50px;">
						<div class="jumbotron-sm box-shadow--4dp" style="padding-left: 25px; padding-top: 10px; padding-bottom: 10px;">
							<a title="Back to Search" href="~/" style="color: #00ff90; font-size: 76px; padding-bottom:1px; padding-left: 10px; text-shadow: 0px 4px 4px 2px rgba(0, 0, 0, .4);">
								Spoti-five
							</a>
							<p style="font-family:Arial; font-size: 16px; padding-left: 10px;">
								Your favorite artist's top 5 albums.
							</p>
						</div>
						<div style="max-height:15px">
							<br />
						</div>
						@RenderBody()
					</div>
				</div>
			</div>
		</div>
		<footer style="font-family:Arial; padding-left:15px;">
			<text style="font-family:inherit;">&copy; @DateTime.Now.Year - Spoti-five, by Zachary D. Kirkland</text>
			<a href="~/Home/Contact" style="font-family:inherit; color: #333333; padding-left:30px;">Contact Me!</a>
		</footer>

		@Scripts.Render("~/bundles/jquery")
		@Scripts.Render("~/bundles/bootstrap")
		@RenderSection("scripts", required: false)
	</div>
</body>
</html>
